<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/backgroundPrimaryColor">
    <TextView
        android:id="@+id/textViewExpression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/equalSignColor"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:textSize="40sp" />
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="#FFFFFF"
        android:gravity="end"
        android:text="= "
        android:ellipsize="start"
        android:singleLine="true"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvClr"
                style="@style/SpecialButtonStyle"
                android:onClick="buttonClicked"
                android:text="CLR"/>
            <TextView
                android:id="@+id/tvDel"
                style="@style/SpecialButtonStyle"
                android:onClick="buttonClicked"
                android:text="Delete"/>
            <TextView
                android:id="@+id/tvDiv"
                style="@style/MathSignButtonStyle"
                android:onClick="buttonClicked"
                android:text="/"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvAdd"
                style="@style/MathSignButtonStyle"
                android:onClick="buttonClicked"
                android:text="+" />

            <TextView
                android:id="@+id/tvSub"
                style="@style/MathSignButtonStyle"
                android:onClick="buttonClicked"
                android:text="-" />

            <TextView
                android:id="@+id/tvMulti"
                style="@style/MathSignButtonStyle"
                android:onClick="buttonClicked"
                android:text="*" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvSeven"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="7"/>
            <TextView
                android:id="@+id/tvEight"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="8"/>
            <TextView
                android:id="@+id/tvNine"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="9"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvFour"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="4"/>
            <TextView
                android:id="@+id/tvFive"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="5"/>
            <TextView
                android:id="@+id/tvSix"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="6"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvOne"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="1"/>
            <TextView
                android:id="@+id/tvTwo"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="2"/>
            <TextView
                android:id="@+id/tvThree"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="3"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvZero"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="0"/>
            <TextView
                android:id="@+id/tvDot"
                style="@style/NumberButtonStyle"
                android:onClick="buttonClicked"
                android:text="."/>
            <TextView
                android:id="@+id/tvEqual"
                style="@style/SpecialButtonStyle"
                android:onClick="buttonClicked"
                android:text="="/>

        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>